{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "jest this",
            "outputCapture": "std",
            "runtimeArgs": [
                // "--prof",
                "--expose-gc",
            ],
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "${file}",
                "--detectLeaks",
                "--detectOpenHandles",
                "--no-cache",
                "--logHeapUsage",
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
